<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - UOW</title>
    @Styles.Render("~/Content/css")
    <link href="~/Content/myApp.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-dark bg-dark">
            <div class="navbar-brand">
                @Html.ActionLink("UOW Using MVC", "Index", "Employee", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            @*<div class="collapse navbar-collapse">
                <div class="navbar-nav">
                        <a href="@Html.ActionLink("Details", "Index", "Employee", new { area = "" }, new { @class = "nav-item nav-link active" })">Home <span class="sr-only">(current)</span></a>
                </div>
            </div>*@
    </nav>
    <div class="container-fluid body-content">
        <hr />
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Repository Using MVC</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
